                android:layout_height="wrap_content"
                android:layout_centerHorizontal = "true"
                android:orientation = "horizontal">

                <ImageView
                    android:id="@+id/ivContactImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    />
